<h3><%= @user.name %>さんのページ</h3>
<% if user_signed_in? && current_user != @user %>
  <table class="table">
    <tr>
      <th>保有スキル</th>
      <td>
        <% @user.tags.each do |t| %>
          <span class="tag"><%= t.name %></span>
        <% end %>
      </td>
    </tr>
  </table>
<% else %>
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="field">
      <%= form.label :tag_ids, 'タグ' %>
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |b| %>
          <%= b.check_box + b.label %>
      <% end %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  <%= link_to 'プロフィール編集', edit_user_registration_path %><br>
  <%= link_to 'プロジェクト作成', new_project_path %><br>
  <% @career = [] %>
  <% current_user.projects.each do |project| %>
    <div class="row">
      <div class="col-2">
        <%= project.name %>
      </div>
      <div class="col-2">
        <%= project.start_date %>
      </div>
      <div class="col-2">
        <%= project.end_date %>
      </div>
      <div class="col-2">
        <%= link_to "編集", edit_project_path(project) %>
      </div>
      <div class="col-2">
        <%= button_to '削除', project, :method => :delete %>
      </div>
    </div>
    <% @career.push([project.name, project.start_date, project.end_date]) %>
  <% end %>
  <%= timeline @career %>

<% end %>
